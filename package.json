{
  "name": "carpture-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register ./index.ts",
    "start": "prisma migrate deploy && ./dist/index.js",
    "build": "npm install && tsc && tsc-alias",
    "postinstall": "npm run generate",
    "post_install": "npm run migrate && npm run dp:push && npm run generate",
    "db:deploy": "npx prisma deploy",
    "migrate": "npx prisma migrate dev --name init-db",
    "generate": "npx prisma generate",
    "prod:start": "node ./dist/index.js",
    "db:push": "npx prisma db push",
    "studio": "npx prisma studio",
    "copy-assets": "cp -r ./views ./assets dist",
    "lint:ts": "ESLINT_USE_FLAT_CONFIG=false eslint --config eslint.config.js .",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@prisma/client": "^5.20.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-handlebars": "^8.0.1",
    "express-rate-limit": "^7.5.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "node-forge": "^1.3.1",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.10.0",
    "randomstring": "^1.3.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hapi__joi": "^17.1.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.7.4",
    "@types/nodemailer": "^6.4.17",
    "@types/randomstring": "^1.3.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "prisma": "^5.20.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  }
}
